{
    "manifest_version": 2,
    "name": "Any Base",
    "version": "0.4.20",
    "author": "Jens Dienst",
    "description": "Convert a number in any base to any other base",
    
    
    "permissions": ["activeTab", "storage", "contextMenus"],
    
    
    "background": {
        "scripts":["background.js"],
        "persistant": false
    },
    
    "browser_action": {
        "default_icon": "images/tab_icon.png",
        "default_title": "Any Base",
        "default_popup": "popup.html"
    },
    
    "options_page": "options.html",
    
    "icons": {
      "16": "images/anybase16.png",
      "32": "images/anybase32.png",
      "48": "images/anybase48.png",
      "128": "images/anybase128.png"
    }
}